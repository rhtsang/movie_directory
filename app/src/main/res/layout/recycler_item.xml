<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/recyclerPosterId"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                app:srcCompat="@android:drawable/screen_background_dark" />

            <TextView
                android:id="@+id/recyclerTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/recyclerPosterId"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recyclerReleaseDateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerTitleId"
                android:layout_toRightOf="@+id/recyclerPosterId"
                android:paddingLeft="10dp"
                android:text="Release Date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recyclerTypeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerReleaseDateId"
                android:layout_toRightOf="@+id/recyclerPosterId"
                android:paddingLeft="10dp"
                android:text="Type"
                android:textSize="18sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>