<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymoviedirectory.mymoviedirectory.Activities.MovieDetailsActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/detailsPosterId"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true"
                app:srcCompat="@android:drawable/screen_background_dark" />

            <TextView
                android:id="@+id/detailsTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/detailsPosterId"
                android:text="Title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/detailsReleaseDateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsTitleId"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/detailsPosterId"
                android:text="Release"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsCategoryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsReleaseDateId"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/detailsPosterId"
                android:text="Category"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsRatingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsCategoryId"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/detailsPosterId"
                android:text="Rating"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsRuntimeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsRatingId"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/detailsPosterId"
                android:text="Runtime"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewId">

        <TextView
            android:id="@+id/detailsDirectorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directed by:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailsActorsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsDirectorId"
            android:text="Actors:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailsWritersId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsActorsId"
            android:text="Written by:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailsPlotId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsWritersId"
            android:text="Plot:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailsBoxOfficeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsPlotId"
            android:text="Box Office:"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
